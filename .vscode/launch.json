{
    "version": "0.2.0",
    "inputs": [
      {
          "id": "debug",
          "type": "promptString",
          "description": "Debug Flag",
          "default": "-debug"
      },
      {
          "id": "config",
          "type": "promptString",
          "description": "Configuration File",
          "default": "examples/config.no-docker.yml"
      }
    ],
    "configurations": [
      {
          "name": "Start Server",
          "type": "go",
          "request": "launch",
          "mode": "auto",
          "program": "${workspaceFolder}/main.go",
          "envFile": "${workspaceFolder}/.env",
          "args": ["${input:debug}", "-config=${input:config}"]
      },
      {
          "name": "Launch",
          "type": "go",
          "request": "launch",
          "mode": "auto",
          "program": "${file}",
          "envFile": "${workspaceFolder}/.env",
          "args": []
      },
      {
          "name": "Test",
          "type": "go",
          "request": "launch",
          "mode": "test",
          "program": "${workspaceFolder}/cache/engine",
          "env": {},
          "args": []
      }
    ]
}
